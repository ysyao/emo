<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="300dp"
    android:gravity="center"
    android:padding="@dimen/activity_ui_margin_small"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_field_name"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:textSize="15sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="所属公司"/>

    <EditText
        android:gravity="center_vertical"
        android:id="@+id/text_field_value"
        android:text="云南公司"
        android:textColor="@color/dark_silver"
        android:textSize="14sp"
        android:background="@android:drawable/edit_text"
        android:layout_marginLeft="@dimen/activity_ui_margin_medium"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</LinearLayout>