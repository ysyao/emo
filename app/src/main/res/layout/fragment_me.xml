<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.phl.emoproject.ui.MeFragment">



    <LinearLayout
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:padding="@dimen/activity_horizontal_margin"
        android:id="@+id/info_container"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="用户名："
                android:textColor="@color/black"
                android:id="@+id/textView" />

            <TextView
                android:textSize="15sp"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:textColor="@color/black"
                android:id="@+id/userName" />
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/activity_ui_margin_small"
            android:layout_marginBottom="@dimen/activity_ui_margin_small"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/silver"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="默认岗位："
                android:textColor="@color/black" />

            <TextView
                android:textSize="15sp"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:textColor="@color/black"
                android:id="@+id/postName" />
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/activity_ui_margin_small"
            android:layout_marginBottom="@dimen/activity_ui_margin_small"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/silver"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="默认部门："
                android:textColor="@color/black" />

            <TextView
                android:textSize="15sp"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:textColor="@color/black"
                android:id="@+id/departmentName" />
        </LinearLayout>

        <View
            android:layout_marginTop="@dimen/activity_ui_margin_small"
            android:layout_marginBottom="@dimen/activity_ui_margin_small"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/silver"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="默认公司："
                android:textColor="@color/black" />

            <TextView
                android:textSize="15sp"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:textColor="@color/black"
                android:id="@+id/corporationName" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/applet_listitem_image_height"
        android:id="@+id/btn_exit"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_round_red_button"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_large"
        android:text="注销登录账号" />

    <ProgressBar
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:id="@id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
